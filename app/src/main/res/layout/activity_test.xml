<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".clazz.TestActivity">

    <EditText
            android:layout_width="327dp"
            android:layout_height="68dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txValue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp" app:layout_constraintHorizontal_bias="0.57"
            android:hint="@string/test_value" android:autofillHints="@string/test_value"/>
    <Button
            android:text="@string/test_send"
            android:layout_width="217dp"
            android:layout_height="56dp" android:id="@+id/btSend"
            app:layout_constraintEnd_toEndOf="@+id/txValue" app:layout_constraintStart_toStartOf="@+id/txValue"
            app:layout_constraintHorizontal_bias="0.554" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cbSingle"/>
    <Button
            android:text="@string/test_query"
            android:layout_width="213dp"
            android:layout_height="59dp" android:id="@+id/btQuery"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/btSend" app:layout_constraintStart_toStartOf="@+id/btSend"
            app:layout_constraintEnd_toEndOf="@+id/btSend" app:layout_constraintHorizontal_bias="0.58"
    />
    <CheckBox
            android:text="@string/test_is_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/cbSingle"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/txValue"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>